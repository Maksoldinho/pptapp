<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/edit_text_rounded_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who won?"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="36sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_team_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team_Name_1"
            android:backgroundTint="@color/green"
            android:textColor="@color/black"
            android:layout_margin="15dp"
            />
        <Button
            android:id="@+id/btn_team_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team_Name_2"
            android:textColor="@color/black"
            android:backgroundTint="@color/blue_for_btn"
            android:layout_margin="15dp"
            />
    </LinearLayout>


</LinearLayout>