<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="30dp"
        android:text="PPT"
        android:textSize="64dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="53dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_players"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/btn_add_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="111dp"
        android:backgroundTint="@color/green"
        android:text="Add players"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_begin_tournament"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView3"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView3" />

    <Button
        android:id="@+id/btn_begin_tournament"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginBottom="190dp"
        android:backgroundTint="@color/blue_for_btn"
        android:textColor="@color/black"
        android:text="Play!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_players" />
</androidx.constraintlayout.widget.ConstraintLayout>